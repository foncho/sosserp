<%- model_class = PaymentMethod -%>

<div class="page-header">
	<h1 class="lead">
		<%= t '.title', 
			default: "#{model_class.model_name.human.split(" ")[0].pluralize} #{model_class.model_name.human.split(" ")[1..-1].map { |w| w.singularize }.join(" ") }"
		%>
	</h1>
</div>

<table class="table table-striped">
	<thead>
		<tr>
			<th><%= model_class.human_attribute_name(:id).upcase %></th>
			<th><%= model_class.human_attribute_name(:name) %></th>
			<th><%= model_class.human_attribute_name(:created_at) %></th>
			<th><%= t '.actions', default: t("helpers.actions") %></th>
		</tr>
	</thead>
	
	<tbody>
		<%= render @payment_methods %>
	</tbody>
</table>

<%= link_to t('.new', default: t("helpers.links.new")), new_payment_method_path, class: 'btn btn-primary' %>
