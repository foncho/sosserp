<%- model_class = User -%>

<%= bootstrap_flash %>

<div class="page-header">
	<h1 class="lead">Datos de usuario</h1>
</div>

<table class="table table-striped">
	<thead>
		<th>Nombre de usuario</th>
		<th>E-mail</th>
		<th>Rol</th>
		<th>Zona asignada</th>
		<th>Ãšltimo acceso</th>
		<th>Acciones</th>
	</thead>
	<tbody>
		<tr>
			<td><%= @user.username %></td>
			<td><%= @user.email %></td>
			<td><%= @user.role.capitalize %></td>
			<td><%= @user.zone.name %></td>
			<td><%= l @user.last_sign_in_at, format: "%A, %d de %B de %Y, a las %H:%M" %></td>
			<td>
				<%= link_to t('.back', default: t("helpers.links.back")), users_path, class: 'btn btn-mini'  %>
				<%= link_to t('.edit', default: t("helpers.links.edit")), edit_user_path(@user), class: 'btn btn-mini' %>
				<%= link_to t('.destroy', default: t("helpers.links.destroy")), user_path(@user), method: 'delete', data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-danger btn-mini' %>
			</td>
		</tr>
	</tbody>
</table>