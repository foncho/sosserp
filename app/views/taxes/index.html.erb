<%- model_class = Tax -%>

<div class="page-header">
	<h1 class="lead"><%=t '.title', default: model_class.model_name.human.pluralize %></h1>
</div>

<table class="table table-striped">
	<thead>
		<tr>
			<th><%= t model_class.human_attribute_name(:name) %></th>
			<th><%= t model_class.human_attribute_name(:value) %></th>
			<th><%=t '.actions', default: t("helpers.actions") %></th>
		</tr>
	</thead>
	
	<tbody>
		<% @taxes.each do |tax| %>
			<tr>
				<td><%= tax.name %></td>
				<td><%= tax.value.to_f %> %</td>
				<td>
					<%= link_to t('.edit', default: t("helpers.links.edit")), edit_tax_path(tax), class: 'btn btn-mini' %>
					<%= link_to t('.destroy', default: t("helpers.links.destroy")), tax_path(tax), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-mini btn-danger' %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

<%= link_to t('.new', default: t("helpers.links.new")), new_tax_path, class: 'btn btn-primary' %>
