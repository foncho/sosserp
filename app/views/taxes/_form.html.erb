<%= simple_form_for @tax, html: { class: 'form-horizontal' } do |f| %>
	<%= f.input :name %>
	<%= f.input :value, as: :string %>
	
	<div class="form-actions">
		<%= f.button :submit, class: 'btn btn-primary' %>
		<%= link_to t('.cancel', default: t("helpers.links.cancel")), taxes_path, class: 'btn' %>
	</div>
<% end %>
